
<div class="card">
    <div class="card-img-fluid">
        <img class="card-img-top" alt="img" src="https://mdbootstrap.com/img/Photos/Others/images/76.jpg" style="width:100%" />
        <div class="card-img-overlay">
            <div class="card-body">
                <h2 class="card-title text-center p-5">Employeer Forum</h2>
                <div class="btn-group">
                    <div class="d-flex">
                        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#addJob">Add Job </button>
                    </div>
                    <div class="d-flex">
                        <button type="button" class="bth btn-warning" data-bs-toggle="modal" data-bs-target="#updateJob">Update Job </button>
                    </div>
                </div>
                @{
                    await Html.RenderPartialAsync("Forum",Model);
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addJob">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-black">Add the job</h4>
            </div>
            <div class="modal-body">
                <form action="~/Admin/AddJob" method="post" class="needs-validation">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name:</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="Industry" class="form-label">Industry:</label>
                        <input type="text" name="Industry" class="form-control" placeholder="Industry" required />
                    </div>
                    <div class="mb-3">
                        <label for="MinSalary" class="form-label">Minimum Salary:</label>
                        <input type="text" name="MinSalary" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="MaxSalary" class="form-label">Maximum Salary:</label>
                        <input type="text" name="MaxSalary" class="form-control" />
                    </div>
                    <div>
                        <label for="Benefits" class="form-label">Benefits:</label>
                        @{
                            foreach (Benefit benefit in Database.benefits)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@benefit.Id" name="benefit" />
                                    <label class="form-check-label" for="benefit"> @benefit.Name</label>
                                </div>
                            }
                        }
                    </div>
                    <div class="mb-3">
                        <label for="Time" class="form-label">Date of creating:</label>
                        <input type="text" name="Time" class="form-control" placeholder="dd-mm-yyyy" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

        </div>
    </div>
</div>