<!DOCTYPE html>
@using JobsPlatform.Models;
@model UltimateWrapperModel
<html>
<head>
    <title>JobPlatform</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark fixed-top p-0">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" @(HomeController._model.Role<7 ? "disabled":"")>Accounts</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="~/Admin/ShowAdmins">Admin</a></li>
                        <li><a class="dropdown-item" href="~/Employeer/ShowEmployeers">Employeer</a></li>
                        <li><a class="dropdown-item" href="~/User/ShowUsers">Normal user</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Link 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Link 3</a>
                </li>
                <li class="nav-item" @(HomeController._model.Role>4? "": "hidden")>
                    <a class="nav-link text-white" href="~/Home">Log Out</a>
                </li>
            </ul>
            <form class="d-flex@(HomeController._model.Role>4 ?" justify-content-end" :"")" method="post" action="~/Forum/Search">
                <input class="form-control" type="text" placeholder="Search" name="jobName" @(HomeController._model.Role > 4 ? "" : "disabled") />
                <button class="btn btn-primary " type="submit" @(HomeController._model.Role > 4 ? "" : "disabled")>Search</button>
            </form>
            <ul class="@(HomeController._model.Role>4? "d-none":"navbar-nav justify-content-end")">
                <li class="nav-item">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#logInModal">
                        Sign In <i class="bi bi-person-circle"></i>
                    </button>
                </li>
                <li class="navbar-item">
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#CreateAccountModal">
                        Create Account
                    </button>
                </li>
            </ul>
        </div>
    </nav>
    <div class="modal" id="logInModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Log in</h5>
                    <form action="Home/LogInModal" method="post" class="needs-validated">
                        <div class="mb-3 mt-3">
                            <label for="Name" class="form-label">Name:</label>
                            <input type="text" name="Name" class="form-control" id="Name" placeholder="Enter Name">
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">You must enter your name in order to log in</div>
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="Password" placeholder="Enter password" name="Password">
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">You must enter password in order to log in</div>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="remember">
                            <label class="form-check-label"> Remember me </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <div class="modal" id="CreateAccountModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">CreateAccount</h5>
                    <form action="/Home/CreateAccountModal" method="post" class="needs-validated">
                        <div class="mb-3 mt-3">
                            <label for="Name" class="form-label">Name:</label>
                            <input type="text" class="form-control" name="Name" id="Name" placeholder="Enter Name">
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">You must enter your name in order to create an account</div>
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="Password" name=Password placeholder="Enter password">
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">You must enter password in order to create account</div>
                        </div>
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" id="user1" value="5" data-bs-toggle="collapse" name="Option" />
                            <label class="form-check-label" for="user1"> User </label>
                        </div>
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" id="employeer1" value="6" name="Option" />
                            <label class="form-check-label" for="employeer1"> Employeer </label>
                        </div>

                        <div class="mb-3" id="employeerExtra">
                            <label for="Company" class="form-label">Enter Company</label>
                            <input type="text" class="form-control" name ="Company"id="company" placeholder="Company's name'" />
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">Company's name is required</div>
                        </div>
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" id="admin1" value="7" name="Option" />
                            <label class="form-check-label" for="admin1"> Admin </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <script>
        $(document).ready(function () {
            $('#employeerExtra').hide();
        });
        $(".form-check-input").on('click', function () {
            if ($(this).attr('id') == 'employeer1') {
                $('#employeerExtra').toggle();
            }
            else {
                $('#employeerExtra').hide();
            }
        });
    </script>
    <div>
        @RenderBody()
    </div>
</body>
</html>
